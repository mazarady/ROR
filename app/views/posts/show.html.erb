<div class="text-center">
<p style="color: green"><%= notice %></p>

<%= render @post %>

<div>
<% if @post.user_id === current_user.id  %>
<%= link_to "Edit this post", edit_post_path(@post), class: "font-regular text-blue-600 dark:text-blue-500 hover:underline"  %> |
<%= link_to "Back to posts", posts_path, class: "font-regular text-blue-600 dark:text-blue-500 hover:underline"  %>


<%= button_to "Destroy this post", @post, method: :delete, class: 'bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transform transition duration-150 ease-in-out', data: { confirm: 'Are you sure?' } %>
<% end %>
</div>
</div>